@model IEnumerable<BusinessObject.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Index</h1>

<p class="text-center">
    <a style="font-size= large; font-weight:600" asp-action="Create">Create New</a>
</p>

<div class="text-center list d-flex">

    <ul class="list-group list-group-flush ">
        <li class="list-group-item">
            <h3>Shoping</h3>
            <ul class="list-group ">
                <li class="list-group-item"><a asp-controller="Product" asp-action="Index">Product</a></li>
                <li class="list-group-item"><a asp-controller="Product" asp-action="Index">Search</a></li>
            </ul>
        </li>
        <li class="list-group-item">
            <h3>Administrations</h3>
            <ul class="list-group ">
                <li class="list-group-item"><a asp-controller="Member" asp-action="Index">Member</a></li>
                <li class="list-group-item"><a asp-controller="Order" asp-action="Index">Order</a></li>
                <li class="list-group-item"><a asp-controller="OrderDetail" asp-action="Index">Order Details</a></li>
            </ul>
        </li>
        <li class="list-group-item"><a asp-controller="Login" asp-action="Index">Login</a></li>
    </ul>

    <table id="ProductIndex" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsInStock)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id=item.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.ProductId })
            </td>
        </tr>
}
    </tbody>
</table>

</div>

